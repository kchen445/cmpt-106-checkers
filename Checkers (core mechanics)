	board[7][3] = (char)79;
	board[7][4] = ' ';
	board[7][5] = (char)79;
	board[7][6] = ' ';
	board[7][7] = (char)79;
	//-------------------------------------------------------------------------------

	cout << setw(44) << "Columns \n\n " << endl;
	cout << setw(60) << "	1	2	3	4	5	6	7	8	" << endl;
	cout << setw(60) << "   +----+----+----+----+----+----+----+----+ " << endl;
	cout << setw(17) << "1" << " | " << board[0][0] << "  |" << board[0][1] << "   | " << board[0][2] << "  |" << board[0][3] << "   | " << board[0][4] << "  | " << board[0][5] << "  | " << board[0][6] << "  |" << board[0][7] << "   |" << endl;
	cout << setw(57) << "	  |    |    |    |    |    |    |    |    |" << endl;
	cout << setw(60) << "   +----+----+----+----+----+----+----+----+ " << endl;
	cout << setw(17) << "2" << " | " <<  board[1][0] << "  |" << board[1][1] << "   | " << board[1][2] << "  |" << board[1][3] << "   | " << board[1][4] << "  | " << board[1][5] << "  | " << board[1][6] << "  |" << board[1][7] << "   |" << endl;
	cout << setw(57) << "	  |    |    |    |    |    |    |    |    |" << endl;
	cout << setw(60) << "   +----+----+----+----+----+----+----+----+ " << endl;
	cout << setw(17) << "3" << " | " << board[2][0] << "  |" << board[2][1] << "   | " << board[2][2] << "  |" << board[2][3] << "   | " << board[2][4] << "  | " << board[2][5] << "  | " << board[2][6] << "  |" << board[2][7] << "   |" << endl;
